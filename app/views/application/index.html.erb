<h1>All Authors</h1>

<table>
<tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Books Published</th>
    <th>Age</th>
</tr>

<% @authors.each do |author| %>
<tr>
    <td><%=author.first_name %></td>
    <td><%=author.last_name %></td>
    <td><%=author.number_of_books %></td>
    <td><%=author.age %></td>
    </tr>
<%end%>
</table>